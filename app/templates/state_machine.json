{
  "Comment": "Fetch Pokemon Species By Name",
  "StartAt": "Fetch Pokemon Species By Name",
  "TimeoutSeconds": 500,
  "QueryLanguage": "JSONata",
  "States": {
    "Fetch Pokemon Species By Name": {
      "Type": "Task",
      "Resource": "arn:aws:states:::http:invoke",
       "Arguments": {
              "Method": "GET",
              "ApiEndpoint": "{% 'https://pokeapi.co/api/v2/pokemon-species/' & $states.input.name %}",
              "InvocationConfig": {
                "ConnectionArn": "${ConnectionArn}"
              }
            },
      "Retry": [
        {
          "ErrorEquals": [
            "States.ALL"
          ],
          "BackoffRate": 2,
          "IntervalSeconds": 1,
          "MaxAttempts": 3,
          "JitterStrategy": "FULL"
        }
      ],
      "End": true,
      "Output": "{% $states.result %}"
    }
  }
}